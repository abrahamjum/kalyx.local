<h1 class="text-center">Add Listing</h1>

<form class="container">
  <%= simple_form_for @listing do |f| %>
  <fieldset>
    <div class="row d-flex justify-content-around">
      <div class="form-group col-md-6 has-success">
        <%= f.input :title, label: "Listing Title", input_html:{ class:'col-form-label form-control' } %>
      </div>
      <div class="form-group col-md-2">
        <label class="col-form-label" for="inputDefault">Price</label>
        <input type="text" class="form-control" placeholder="" id="inputDefault">
      </div>
      <div class="form-group col-md-2">
        <label class="col-form-label" for="inputDefault">Location</label>
        <input type="text" class="form-control" placeholder="" id="inputDefault">
      </div>
      <div class="form-group col-md-2 has-success">
        <label class="col-form-label has-success" for="inputDefault">Zip Code</label>
        <input type="text" class="form-control" placeholder="" id="inputDefault">
      </div>
      <div class="form-group col-md-12 has-success">
        <label for="exampleTextarea">Listing Description</label>
        <textarea class="form-control" id="exampleTextarea" rows="16"></textarea>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Listing Details</legend>
    <div class="row">
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value="">
          <p style="margin-left: 2rem">
            Accepts Cryptocurrencies
          </p>
        </label>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Contact Info</legend>
      <div class="form-group row col-md-6">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-2">
          <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
        </div>
      </div>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-2">
          <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="John Brown">
        </div>
      </div>
      <div class="form-group row col-md-6">
        <label class="col-form-label col-form-label-sm" for="inputSmall"></label>
        <input class="form-control form-control-sm" type="text" placeholder="Contact Number" id="inputSmall">
      </div>
      <div class="form-group row col-md-6">
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" value="">
            <p style="margin-left: 2rem">
              Email
            </p>
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" value="">
            <p style="margin-left: 2rem">
              Phone
            </p>
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" value="">
            <p style="margin-left: 2rem">
              Text
            </p>
          </label>
        </div>
      </div>
  </fieldset>
  <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</form>
