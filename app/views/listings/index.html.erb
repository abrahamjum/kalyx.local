<h1 class="text-center">Listings</h1>

<div class="container">
  <div class="d-flex justify-content-center"><%= paginate @listings %></div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="text-center">Title</th>
          <th class="text-center">Description</th>
          <th class="text-center">Posted</th>
        </tr>
      </thead>
      <% @listings.each do |t| %>
      <tbody>
        <tr class="table-default">
          <td><%= link_to t.title, listing_path(t) %></td>
          <td><%= link_to truncate(t.description, length:220), listing_path(t) %></td>
          <td><%= link_to t.created_at.strftime("%b %d, %y"), listing_path(t) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

  <div class="d-flex justify-content-center"><%= paginate @listings %></div>
</div>
